        });

        $('.insertSymbol').click(function () {

            $('#imgHeader').append("<img src= /Images/mana/" + $(this).attr('id') + ".png />")
            return false;
        });

    </script>
    <script>
        var element = $("#second");
        var getCanvas; // global variable

        $("#generate").on('click', function () {
            setTimeout(() =>{
            html2canvas(element, {
                onrendered: function (canvas) {

                    $("#previewImage").append(canvas); getCanvas = canvas;                    
                }
            });
            },40);
         
        });
      
    </script>

