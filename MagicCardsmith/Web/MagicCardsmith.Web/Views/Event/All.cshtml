@model MagicCardsmith.Web.ViewModels.Event.EventListViewModel
@using MagicCardsmith.Web.Infrastructure.Extensions
@{
    this.ViewData["Title"] = "Ongoing Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-sm-12 col-md-12 pl-0 pr-0">
    <div class="row">

        <div class="col-sm-12 col-md-12 pl-0 pr-0">
            <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Events</h4>

            <div class="firstfeed-flexbox-events">
                @foreach (var eventNow in this.Model.Events.Where(x => x.ApprovedByAdmin == true))
                {
                    <div class="article-card card border-0">
                        <a href="" aria-label="article" class="image-wrapper">
                            <a asp-controller="Event" asp-action="ById" asp-route-id="@eventNow.Id" asp-route-information="@eventNow.GetEventTitle()" class="article-uimgheader">
                                <img src="@eventNow.ImageUrl" class="article-uimgheader" alt="@eventNow.Title">
                            </a>
                        </a>
                        <div class="card-body pt-0">
                            <small class="yellow-line">
                                <a href=""><i class="far fa-star"></i></a>
                                <span>@eventNow.CreatedOn</span>
                            </small>
                            <div class="ff-display font-size-18">
                                <b><a href="">@eventNow.Title</a></b>
                            </div>
                            <div class="card-text d-none d-md-flex m-1">@eventNow.EventDescription</div>
                        </div>
                    </div>
                }
            </div> 
        </div>
    </div>
</div>
