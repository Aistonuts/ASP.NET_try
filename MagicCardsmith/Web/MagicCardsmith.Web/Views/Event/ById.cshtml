@using MagicCardsmith.Common;
@model MagicCardsmith.Web.ViewModels.Event.SingleEventViewModel
@{
    this.ViewData["Title"] = "Event Milestones";
}

<div class="col-sm-12 col-md-12 col-lg-8 pl-0 pr-0 pr-lg-3">
    <div class="card p-lg-3">
        <div>
            <div id="zone01-flex" class="mx-auto"></div>
        </div>
        <article id="article-body">
            <div class="h-oneKpx pl-0 pr-0">
                <div class="mt-3 mb-3 d-sm-flex justify-content-between align-items-end">
                    <div class="col-12 col-sm-7 col-md-6">
                        <h1 class="ff-display">@Model.Title</h1>
                        <div class="w-100 d-flex justify-content-start mb-1 mt-3">
                        </div>

                    </div>
                    <div class="col-12 col-sm-5 col-md-6">
                        <img class="article-uimgheader-preview" src="@Model.ImageUrl" alt="@Model.Title">
                    </div>
                </div>
                @if(Model.EventId == 4)
                {
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <div id="DigitalArt" class="outer-container">
                                @foreach (var card in this.Model.EventCards)
                                {
                                    <div class="inner-container">
                                        <a asp-controller="Card" asp-action="ById" asp-route-id="@card.Id" class="item ae-card-link cardLink ">
                                            <img class="lazy" src="@card.ImageUrl" alt="@card.Name" style="">
                                            <div class="item-hidden-text">@card.Name</div>
                                        </a>
                                        <div class="item-footer">
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                }
                @if (Model.EventId == 3)
                {
                    <div class="container-create">
                        <table id="html-content-holder" border="0" cellspacing="0" cellpadding="0" style="clear: both;">
                            <tbody>
                                <tr style="width:100%">
                                    <td style="padding:0px;text-align:left;vertical-align:top;">
                                        <form method="post" id="cardinfo" enctype="multipart/form-data">
                                            <table border="0" cellspacing="0" cellpadding="2" style="width:100%;">
                                                <tbody>
                                                    <tr class="row1">
                                                        <td style="width:30%">
                                                            <label asp-for="StoreName">Store name:</label>
                                                        </td>
                                                        <td>
                                                            <input asp-for="StoreName" name="name" id="name" placeholder="Your store name...">
                                                        </td>
                                                    </tr>
                                                    <tr class="row1">
                                                        <td>Picture URL:</td>
                                                        <td>
                                                            <input type="text" class="input_text" name="picture" id="picture" style="width:50%">
                                                            <input type="button" id="upload" class="ipsButton_secondary" value="Upload">
                                                        </td>
                                                    </tr>
                                                    <tr class="row1">
                                                        <td>
                                                            <label asp-for="StoreAddress">Store address:</label>
                                                        </td>
                                                        <td>
                                                            <textarea asp-for="StoreAddress" id="cardtext" style="height:60px;font-size: 10px" cols="60" rows="10" runat="server" placeholder="@Model.EventDescription"></textarea>
                                                            <br>
                                                        </td>
                                                    </tr>
                                                    <tr class="row1">
                                                        <td>City:</td>
                                                        <td>
                                                            <input type="text" class="input_text" name="artist" id="artist">
                                                        </td>
                                                    </tr>
                                                    <tr class="row1">
                                                        <td>Country:</td>
                                                        <td>
                                                            <input type="text" class="input_text" name="artist" id="artist">
                                                        </td>
                                                    </tr>
                                                    <tr class="row1">
                                                        <td>Phone number:</td>
                                                        <td>
                                                            <input type="text" class="input_text" name="artist" id="artist">
                                                        </td>
                                                    </tr>
                                                    <input type="submit" value="Submit" class="btn btn-warning">
                                                </tbody>
                                            </table>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
                @*  @if (Model.EventId != 3 && Model.EventId != 4)
                {
                    <div class="row mt-2 mb-2">
                        <div id="article-text" class="col-md-12">
                            <div class="card-text d-none d-md-flex m-1">@Model.EventDescription</div>
                            <div class="col-sm-12 col-md-12 col-lg-4 pl-0 pr-0 mt-2 mt-lg-0">
                                @foreach (var milestone in this.Model.EventMilestones)
                                {
                                    <div class="card mt-2 mr-2 mb-2">
