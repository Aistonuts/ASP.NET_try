@model MagicCardsmith.Web.ViewModels.Premium.MembershipViewModel
@{
    this.ViewData["Title"] = "Become";
}

<div class="row pt-2">
    <div class="col-md-12 pl-0 pr-0">
        <div class="card border-0">
            <div class="card-body tab-content p-0">
                <div id="home" class="tab-pane row active" role="tabpanel">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mt-3">
                            <div class="card mb-3 h-100">
                                <div class="card-header text-center pt-1 pb-1"><b><i class="fas fa-user"></i> Member</b></div>
                                <div class="card-body pb-0">
                                    <p>
                                        As a member you can upload your art and participate in events.
                                        Regularly our team will check on the latest art pieces submitted by our members and approve them.
                                    </p>
                                    <ul>
                                        <li><b>Access</b> to event organaizer , article creator and card/deck creator tool</li>
                                        <li>Your articles and events will be visible in your profile</li>
                                    </ul>
                                </div>
                                <div class="mb-2 text-center">
                                    <a class="btn btn-light font-weight-bold" id="register" asp-area="Identity" asp-page="/Account/Register">Free</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mt-3">
                            <div class="card mb-3 h-100 border-premium">
                                <div class="card-header text-center bg-premium text-white pt-1 pb-1"><b><i class="fas fa-star" title="Premium Subscriber"></i> Premium</b></div>
                                <div class="card-body pb-0">
                                    <img src="/images/navigation/Premium.png" width="300" alt="Premium" class="mx-auto d-block mb-3 img-fluid">
                                    <ul class="mt-2">
                                        <li><b>Premium Account</b> <i class="fas fa-star" title="Premium Subscriber"></i> in your MagicCardsmith profile</li>
                                        <li><b>Unlimited</b>Comment on cards , create articles and events. Create new cards, create decks and participate in the creation of future deck expansions</li>
                                        <li><b>Unlimited</b>Premium Users gets all the base functionality provided as a Content Creator, but with no limits and Premium-only features. </li>

                                    </ul>
                                    <p> To get a premium account you need to be an active Artist, an active member or a store owner.</p>
                                    <p>
                                        Requirements.
                                    </p>
                                    <ul>
                                        <li>Artists with   2 approved art pieces</li>
                                        <li>Being a store owner </li>
                                        <li>Event winners</li>
                                        <li>Content creator with 2 approved articles and 2 approved events</li>
                                        <li></li>
                                    </ul>
                                </div>
                                <div class="mb-2 text-center">
                                    <a class="btn btn-light btn-outline-premium font-weight-bold">Check eligibility </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mt-3">
                            <form method="post">
                                <div class="card mb-3 h-100 border-content-creator">
                                    <div class="card-header text-center bg-content-creator text-white pt-1 pb-1"><b><i class="far fa-star" title="Artist"></i> Artist</b></div>
                                    <div class="card-body pb-0">
                                        <ul>
                                            <li><b> Artist work will be published in our art catalog</b> </li>
                                            <li><b>Access</b> to additional events</li>
                                            <li></li>
                                        </ul>
                                        <p>
                                            Artist are eligible to become premium users
                                        </p>
                                    </div>
                                    <div class="mb-2 text-center">
                                        <a class="btn btn-light btn-outline-content-creator font-weight-bold">Become</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>