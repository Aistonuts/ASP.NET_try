@model MagicCardsmith.Web.ViewModels.User.MyDataUserViewModel
@using MagicCardsmith.Web.Infrastructure.Extensions
@{
    this.ViewData["Title"] = "My Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-lg-12 col-xl-9 pl-0 pr-0 pr-xl-3">
    <div class="col-sm-12 col-md-12 pl-0 pr-0">
        <h1 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Approved content</h1>
        @if (Model.Articles.Any(x => x.ApprovedByAdmin == true))
        {
            <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Articles</h4>
            <div class="firstfeed-flexbox">
                @foreach (var article in this.Model.Articles.Where(x => x.ApprovedByAdmin == true))
                {
                    <div class="article-card card border-0">
                        <a href="" aria-label="article" class="image-wrapper">
                            <a asp-controller="Article" asp-action="ById" asp-route-id="@article.Id" asp-route-information="@article.GetArticleTitle()">
                                <img src="@article.ImageUrl" class="article-uimgheader" alt="@article.Title">
                            </a>
                        </a>
                        <div class="card-body pt-0">
                            <small class="yellow-line">
                                <a href=""><i class="far fa-star"></i>@article.ArticleCreatorName</a>
                                <span>@article.CreatedOn</span>
                            </small>
                            <div class="ff-display font-size-18">
                                <b><a href="">@article.Title</a></b>
                            </div>
                            <div class="card-text d-none d-md-flex m-1">@article.ShortDescription</div>
                        </div>
                    </div>
                }
            </div>
            <hr />
        }
        @if (Model.Arts.Any(x => x.ApprovedByAdmin == true))
        {
            <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Art</h4>
            <div class="firstfeed-flexbox">
                @foreach (var art in this.Model.Arts.Where(x => x.ApprovedByAdmin == true))
                {
                    <div class="inner-container">
                        <a asp-controller="Art" asp-action="ById" asp-route-id="@art.Id" asp-route-information="@art.GetInformation()" class="item ae-card-link cardLink ">
                            <img class="lazy" src="@art.ImageUrl" alt="@art.Title" style="">
                            <div class="item-hidden-text">@art.Title</div>
                        </a>
                        <div class="item-footer">
                        </div>
                    </div>
                }
            </div>
            <hr />
            <partial name="_PagingPartial" model="@Model" />
        }
        @if (Model.Cards.Any(x => x.ApprovedByAdmin == true))
        {
            <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Cards</h4>
            <div class="firstfeed-flexbox">
                @foreach (var card in this.Model.Cards.Where(x => x.ApprovedByAdmin == true))
                {
                    <div class="inner-container">
                        <a asp-controller="Card" asp-action="ById" asp-route-id="@card.Id" asp-route-information="@card.GetCardName()" class="item ae-card-link cardLink ">
                            <img src="@card.CardRemoteUrl" alt="@card.Name" style="">
                            <div class="item-hidden-text">@card.CardExpansion</div>
                        </a>
                        <div class="item-footer">
                        </div>
                    </div>
                }
            </div>
            <partial name="_PagingPartial" model="@Model" />
            <div class="mb-5"></div>
        }

    </div>
</div>

<div class="col-md-12 col-lg-12 col-xl-3 pl-0 pr-0">
    <div class="card mb-2 pb-1 text-center ff-display">
        <h4><b>Check below your  latest submitted items</b></h4>
        Awaiting approval from MagicCardsmith team
    </div>
    <div class="card mb-2 ">
        <div class="ae-border-bottom-light  p-0 text-center">
            <b><i class="fas fa-calendar"></i> My cards</b>
        </div>
        <div class="card-body p-2">
            @foreach (var cards in this.Model.Cards.Where(x => x.ApprovedByAdmin == false))
            {
                <div class="card mb-2 pb-1 text-left ff-display">
                    <a asp-controller="Card" asp-action="ById" asp-route-id="@cards.Id" asp-route-information="@cards.GetCardName()">@cards.Name</a>
                </div>


            }
        </div>
    </div>
    <div class="card mb-2 ">
        <div class="ae-border-bottom-light  p-0 text-center">
            <b><i class="fas fa-users"></i> My stores</b>
        </div>
        <div class="card-body p-2">

            @foreach (var store in this.Model.Stores.Where(x => x.ApprovedByAdmin == false))
            {
                <p class="card-text">

                    The @store.Name has not been approved yet.

                </p>
            }

        </div>
    </div>
    <div class="card mb-2 ">
        <div class="ae-border-bottom-light  p-0 text-center">
            <b><i class="fa fa-picture-o"></i> My art pieces</b>
        </div>
        <div class="card-body p-2">

            @foreach (var arts in this.Model.Arts.Where(x => x.ApprovedByAdmin == false))
            {
                <p class="card-text">

                    The @arts.Title has not been approved yet.

                </p>
            }

        </div>
    </div>
    <div class="card mb-2 ">
        <div class="ae-border-bottom-light  p-0 text-center">
            <b><i class="fas fa-calendar"></i> My events</b>
        </div>
        <div class="card-body p-2">
        @foreach (var gameEvent in this.Model.Events.Where(x => x.ApprovedByAdmin == false))
        {

                <p class="card-text">
                    <a asp-controller="Event" asp-action="ById" asp-route-id="@gameEvent.Id" asp-route-information="@gameEvent.GetEventTitle()">@gameEvent.Title</a>
                </p>
           
        }
        </div>
    </div>
    <div id="zone18-300x600-card" class="mb-2 pt-1">
        <div>
            <div id="zone18-300x600" class="mx-auto"></div>
        </div>
    </div>
</div>
