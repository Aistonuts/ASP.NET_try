@{
    this.ViewData["Title"] = "All card game expansions";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}
@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> cards, art pieces and events.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and agents</b> and <b>all events</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="PlayCard" asp-action="All"
       class="btn btn-primary btn-lg">All Cards</a>
    <span> | </span>
    <a asp-area="" asp-controller="PlayCard" asp-action="Add"
       class="btn btn-primary btn-lg">Add Card</a>
    <span> | </span>
    <a asp-area="" asp-controller="Art" asp-action="All"
       class="btn btn-primary btn-lg">All Art</a>
    <span> | </span>
    <a asp-area="" asp-controller="Art" asp-action="Add"
       class="btn btn-primary btn-lg">Add Art</a>
    <span> | </span>
    <a asp-area="" asp-controller="Article" asp-action="Create"
       class="btn btn-primary btn-lg">Add article</a>
    <span> | </span>
    <a asp-area="Administration" asp-controller="Event" asp-action="All"
       class="btn btn-primary btn-lg">Events</a>
    <span> | </span>
    <a asp-area="Administration" asp-controller="Event" asp-action="Publish"
       class="btn btn-primary btn-lg">Add Event</a>
    <span> | </span>
    <a asp-area="Administration" asp-controller="Member" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
    <span> | </span>
    <a asp-area="" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">Members Portfolio</a>
    <span> | </span>
    <a asp-area="" asp-controller="User" asp-action="MyData"
       class="btn btn-primary btn-lg">My portfolio</a>
    <span> | </span>
    <a asp-area="" asp-controller="Order" asp-action="All"
       class="btn btn-primary btn-lg">All Orders</a>
    <span> | </span>
</div>
