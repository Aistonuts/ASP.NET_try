@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12 col-lg-7 pl-0 pr-0 pr-lg-2">
        <div class="card mt-2">
            <div class="card-header p-0">
                <h5 class="text-center">Email registration</h5>
            </div>
            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly"  class="text-danger" role="alert"></div>
                    <div class="form-group row">
                        <label asp-for="Input.Email" class="col-md-3 control-label" for="Email">Email</label>
                        <div class="col-md-9">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <small class="text-muted">We will not share your email with any third party or send you any email apart from service related information.</small>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Input.Password" class="col-md-3 control-label">Password</label>
                        <div class="col-md-9">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <small class="text-muted">Password must be at least 6 characters long, contain a digit, a lower case and a upper case character.</small>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Input.ConfirmPassword" class="col-md-3 control-label" for="ConfirmPassword">Confirm password</label>
                        <div class="col-md-9">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="offset-md-3 col-md-9 text-center">
                            <button id="registerSubmit" type="submit" class="btn btn-light font-weight-bold">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
