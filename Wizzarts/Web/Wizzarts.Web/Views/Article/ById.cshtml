@model Wizzarts.Web.ViewModels.Article.SingleArticleViewModel
@{
    this.ViewData["Title"] = "Article";
}

<div class="row pt-2 ae-break-word">
    <div class="col-sm-12 col-md-12 col-lg-8 pl-0 pr-0 pr-lg-3">
        <div class="card p-lg-3">
            <article id="article-body">
                <div class="h-oneKpx pl-0 pr-0">
                    <div class="mt-3 mb-3 d-sm-flex justify-content-between align-items-end">
                        <div class="col-12 col-sm-7 col-md-6">
                            <h1 class="ff-display">@Model.Title</h1>
                            <div class="w-100 text-center text-white article-text-tags">
                                <span>Standard</span>
                                <span>Updates</span>
                            </div>
                            <div class="w-100 d-flex justify-content-start mb-1 mt-3">
                                <div class="yellow-line w-100 mb-0">
                                    <img src="https://gravatar.com/avatar/ffec5fa40af1284051b913ff0c293c82.jpg" width="50" height="50" class="rounded-circle">
                                    <a href="/User/ChrisCee">@Model.ArticleCreatorName</a>
                                    <span class="text-muted">@Model.CreatedOn</span>
                                    <span class="text-muted"><i class="far fa-clock"></i> 5 min</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-5 col-md-6">
                            <img class="article-uimgheader-preview" src="@Model.ImageUrl" alt="MTG Standard Rotation 2024: Overview and Final Rankings">
                        </div>
                    </div>
                    <div class="row mt-2 mb-2">
                        <div id="article-text" class="col-md-12">
                            <p>@Model.Description</p>
                            <p>@Model.ShortDescription</p>
                            
                            <p>&nbsp;</p><p></p>
                            <p>&nbsp;</p>
                        </div>
                    </div>
                    <h4 class="pl-2">About @Model.ArticleCreatorName:</h4>
                    <div class="w-100 pl-2">
                        <p>A witness since the time the benevolent silver planeswalker first left Dominaria, ChrisCee has since went back and forth on a number of plane-shattering incidents to oversee the current state of the Multiverse.</p>
                        <p><em>"Target bird is no longer available. Please leave a message after the last bounce."</em></p>
                    </div>
                </div>
            </article>
            <div class="card mt-2 border-0">
                <div class="card-header bg-light p-0 text-center">
                    <b>Comments</b>
                </div>
                <div class="card-body">
                    <div class="w-100 text-center">
                        <h4><a href="/Account/Login/?ReturnUrl=/Article/MTG-Standard-Rotation-Guide-2024-Overview-and-Final-Rankings" rel="nofollow">Login</a> to comment</h4>
                    </div>
                    <div id="commentMessage" class="alert alert-danger" role="alert"></div>
                    <p><span id="commentCount">1</span> comments</p>
                    <div id="comments" data-id="10829" data-type="article">
                        <div class="card mb-2">
                            <div class="card-header pt-0 pb-0 pr-0">
                                <a href="/User/HfjNUlYZ"><b>HfjNUlYZ</b></a> <time class="timeago text-muted" datetime="2024-07-02 01:47:43Z" title="02 Jul 2024 01:47">a day ago</time>
                            </div>
                            <div class="card-body">
                                e
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm-12 col-md-12 col-lg-4 pl-0 pr-0 mt-2 mt-lg-0">
        @foreach(var article in this.Model.Articles)
        {
            <div class="card mt-2 mb-2 ">
                <div class="w-100 d-flex justify-content-start">
                    <div class="mr-1">
                        <a href="/Article/Magic-The-Gathering-Foundations---Set-Info--Spoilers">
                            <div class="article-imgheader-xs lazy uimg" style="background-image: url("@article.ImageUrl";);">
                            </div>
                        </a>
                    </div>
                    <div>
                        <div class="ff-display font-size-18">
                            <b><a href="/Article/Magic-The-Gathering-Foundations---Set-Info--Spoilers">@article.Title</a></b>
                        </div>
                        <p>
                            <span class="text-muted">
                                29.Jun
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        }
       
    </div>
</div>