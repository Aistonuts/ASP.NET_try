@model Wizzarts.Web.ViewModels.Article.CreateArticleViewModel

@{
    this.ViewData["Title"] = "Create article";
}

<div class="row pt-2">
    <div class="col-md-12 pl-0 pr-0">



        <div class="card border-0">

            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <h3 class="ff-display">Add your art here : </h3>
                        <div class="card-body pt-2 pb-1">
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="Title"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="Title" class="form-control" placeholder="Title">
                                    </div>
                                    <span asp-validation-for="Title" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="ShortDescription"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="ShortDescription" class="form-control" placeholder="Article Short Description">
                                    </div>
                                    <span asp-validation-for="ShortDescription" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="Description"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="Description" class="form-control" placeholder="Art Description">
                                    </div>
                                    <span asp-validation-for="Description" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="ImageUrl"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="ImageUrl" class="form-control" placeholder="Your Article Image">
                                    </div>
                                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-light">
                                            <span class="fas fa-plus"></span> <b>Create</b>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <a href="#" data-toggle="modal" data-target="#modalCollection">
                            <img src="https://aetherhub.b-cdn.net/images/collection/collection-preview01.png" class="img-fluid rounded mx-auto d-block" alt="Organize your collection">
                        </a>
                        <div class="text-center mb-4"><i>Full detailed overview of your MTG collection</i></div>
                        <a href="#" data-toggle="modal" data-target="#modalBinder">
                            <img src="https://aetherhub.b-cdn.net/images/collection/binder-preview01.png" class="img-fluid rounded mx-auto d-block" alt="Organize your collection">
                        </a>
                        <div class="text-center"><i>Binders help you organize your collection</i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>