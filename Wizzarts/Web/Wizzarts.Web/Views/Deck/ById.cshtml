@using Wizzarts.Common
@model Wizzarts.Web.ViewModels.Deck.SingleDeckViewModel


@{
    ViewData["Title"] = "Deck";
}
<div class="row pt-2">
    <div class="col-md-12 col-lg-12 col-xl-9 pl-0 pr-0 pr-xl-1">
        <div class="card h-oneKpx">
            <div class="card-header bg-light pt-0">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link active">
                            <span class="fas fa-search" title="Advanced Search"></span> <b>Advanced Search</b>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Card/Set" class="nav-link ">
                            <span class="ss ss-xmods" title="Browse by Set"></span> <b>MTG Set List</b>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body pt-1">
                <div class="row mt-2">
                    <div class="col-md-12">
                        <div id="cards" class="outer-container">
                            @if (!Model.CardsInDeck.Any())
                            {
                                <div class="d-flex flex-row justify-content-center">
                                    <div class="font-weight-bold mt-5" style="max-width: 500px;">
                                        AetherHub has catalogued every Magic: The Gathering card and token into a comprehensive database. <br>Search through the entire Magic history for additions to your deck, detailed information about ruling, format legalities or different prints of a card.
                                    </div>
                                </div>
                            }
                            else
                                @foreach (var card in this.Model.CardsInDeck)
                                {
                                    <div class="inner-container">
                                        <div class="item-hidden-text">@card.Name</div>
                                        <a asp-controller="PlayCard" asp-action="ById" asp-route-id="@card.Id" class="item ae-card-link cardLink" data-name="@card.Name" data-number="@card.Id" data-img="@card.CardRemoteUrl">
                                            <img class="lazy" src="@card.CardRemoteUrl" alt="@card.Name" style="">
                                        </a>
                                        <div class="item-footer">
                                        </div>
                                    </div>
                                }


                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-12">
                <ul class="entry-meta">
                    @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                        <form asp-controller="Deck" asp-action="Dispatch" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                            <div class="form-group row mb-1">
                                <label class="col-sm-2 col-lg-2 col-form-label" asp-for="DeckStatusId">Deck Status</label>
                                <div class="col-sm-8 col-lg-6">
                                    <select asp-for="DeckStatusId" class="form-control" placeholder="Deck status is">
                                        <option value="@Model.DeckStatusId" selected="true">
                                            @Model.DeckStatus
                                        </option>
                                        @foreach (var status in Model.DeckStatuses)
                                        {
                                            <option value="@status.Id">@status.Name</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="DeckStatusId" class="small text-danger"></span>
                            </div>
                            <div class="form-group row mb-1">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-8">
                                    <button type="submit" class="btn btn-light">
                                        <span class="fas fa-plus"></span> <b>Dispatch</b>
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-12 col-xl-3 pl-0 pr-0">
        <div class="card mb-2">
            <div class="w-100 text-center ae-border-bottom-light"><h4><a href="/Metagame/Standard-BO1/" class="metagroup-link ff-display">User decks </a></h4></div>
            <div class="card-body pl-1 pr-1 pt-2 pb-0">
                @foreach (var deck in this.Model.Decks)
                {
                    <div class="metagroup-container">
                        <div class="mr-2 d-none d-lg-block">
                            <a asp-controller="Deck" asp-action="ById" asp-route-id="@deck.Id">
                                <div class="meta-cardimg" style="background-image: url('@deck.ImageUrl')"></div>
                            </a>
                        </div>
                        <div>
                            <a asp-controller="Deck" asp-action="ById" asp-route-id="@deck.Id" class="metagroup-link">
                                <b class="text-primary">@deck.Name</b>
                                <br>

                                <span title="Change since last week" class="diffright d-none d-sm-inline text-danger">
                                    <i class="fas fa-caret-down"></i>4.60%
                                </span>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<hr />
