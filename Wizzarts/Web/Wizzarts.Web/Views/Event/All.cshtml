@model Wizzarts.Web.ViewModels.Event.EventListViewModel
@{
    this.ViewData["Title"] = "Ongoing Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12 col-lg-12 col-xl-9 pl-0 pr-0 pr-xl-3">
    <div class="row">

        <div class="col-sm-12 col-md-12 pl-0 pr-0">
            <div class="mb-2 firstfeed-flexbox ff-display">
            <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Events</h4>

            <div class="firstfeed-flexbox">
                @foreach (var eventNow in this.Model.Events)
                {

                    <div class="article-card card border-0">
               
                            @if(eventNow.Id == 1)
                            {
                                    <a asp-controller="Event" asp-action="ById" asp-route-id="@eventNow.Id" class="image-wrapper">
                                    <img src="@eventNow.ImageUrl" class="article-uimgheader" alt="@eventNow.Title">
                                </a>
                            }
                            @if (eventNow.Id == 2)
                            {
                                    <a asp-controller="Event" asp-action="ById" asp-route-id="@eventNow.Id" class="image-wrapper">
                                    <img src="@eventNow.ImageUrl" class="article-uimgheader" alt="@eventNow.Title">
                                </a>
                            }
                            @if (eventNow.Id == 3)
                            {
                                    <a asp-controller="Store" asp-action="Create" asp-route-id="@eventNow.Id" class="image-wrapper">
                                    <img src="@eventNow.ImageUrl" class="article-uimgheader" alt="@eventNow.Title">
                                </a>
                            }
                            @if (eventNow.Id == 4)
                            {
                                    <a asp-controller="PlayCard" asp-action="AllEventCards" asp-route-id="@eventNow.Id" class="image-wrapper">
                                    <img src="@eventNow.ImageUrl" class="article-uimgheader" alt="@eventNow.Title">
                                </a>
                            }
                           
                            <div class="w-100 text-center text-white article-text-tags">
                                <span>Discussion</span>
                                <span>News</span>
                            </div>

                        <div class="card-body pt-0">
                            <small class="yellow-line">
                                <a href=""><i class="far fa-star"></i></a>
                                <span>@eventNow.CreatedOn</span>
                            </small>
                            <div class="ff-display font-size-18">
                                <b><a href="">@eventNow.Title</a></b>
                            </div>
                            <div class="card-text d-none d-md-flex m-1">@eventNow.EventDescription</div>
                        </div>
                    </div>
                }
            </div>
            </div>
        </div>
    </div>
</div>
