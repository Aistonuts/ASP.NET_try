@model Wizzarts.Web.ViewModels.Event.CreateEventViewModel
@{
    this.ViewData["Title"] = "Create event";
}

<div class="row pt-2">
    <div class="col-md-12 pl-0 pr-0">



        <div class="card border-0">

            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <h3 class="ff-display">Create new event</h3>
                        <div class="card-body pt-2 pb-1">
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="Title"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="Title" class="form-control" placeholder="Title">
                                    </div>
                                    <span asp-validation-for="Title" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="EventDescription">Description</label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="EventDescription" class="form-control" placeholder="Event Description">
                                    </div>
                                    <span asp-validation-for="EventDescription" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="Image"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="Image" class="form-control" placeholder="Your event Image">
                                    </div>
                                    <span asp-validation-for="Image" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-light">
                                            <span class="fas fa-plus"></span> <b>Create</b>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <h3 class="ff-display">Add event components : </h3>
                        <div class="card-body pt-2 pb-1">
                            <form method="post" enctype="multipart/form-data">
