@using Wizzarts.Common
@model Wizzarts.Web.ViewModels.Home.IndexAuthenticationViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
<div class="row ae-break-word">
    <div class="col-md-12 col-lg-12 col-xl-9 pl-0 pr-0 pr-xl-3">
        <div class="row">
            <div class="col-sm-12 col-md-12 pl-0 pr-0">
                <h1 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Welcome to @GlobalConstants.SystemName!</h1>
                <div class="mb-2 firstfeed-flexbox ff-display">
                    <div class="card">
                        <div class="ae-border-bottom-light text-gold pl-2">
                            <b>TABLETOP META</b>
                        </div>
                        <div class="card-body p-2">
                            <a href="/Metagame/Standard-Events/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Standard</a><br>
                            <a href="/Metagame/Pioneer/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Pioneer</a><br>
                            <a href="/Metagame/Modern/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Modern</a><br>
                            <a href="/Metagame/Legacy/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Legacy</a><br>
                            <a href="/Metagame/Vintage/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Vintage</a>
                        </div>
                    </div>
                    <div class="card">
                        <div class="ae-border-bottom-light text-gold pl-2">
                            <b>MTG ARENA META</b>
                        </div>
                        <div class="card-body p-2">
                            <a href="/Metagame/Standard-BO1/" class="text-decoration-none"><i class="ss ss-parl3"></i> Standard BO1</a><br>
                            <a href="/Metagame/Alchemy-BO1/" class="text-decoration-none"><i class="ss ss-parl3"></i> Alchemy BO1</a><br>
                            <a href="/Metagame/Explorer-BO1/" class="text-decoration-none"><i class="ss ss-parl3"></i> Explorer BO1</a><br>
                            <a href="/Metagame/Historic-BO1/" class="text-decoration-none"><i class="ss ss-parl3"></i> Historic BO1</a><br>
                            <a href="/Metagame/Timeless-BO1/" class="text-decoration-none"><i class="ss ss-parl3"></i> Timeless BO1</a>
                        </div>
                    </div>
                    <div class="card">
                        <div class="ae-border-bottom-light text-gold pl-2">
                            <b>SINGLETON &amp; LIMITED</b>
                        </div>
                        <div class="card-body p-2">
                            <a href="/Metagame/Commander/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Commander</a><br>
                            <a href="/Metagame/Oathbreaker/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Oathbreaker</a><br>
                            <a href="/Limited/" class="text-decoration-none"><i class="ss ss-pmtg1"></i> Draft Metagame</a><br>
                            <a href="/Metagame/Brawl/" class="text-decoration-none"><i class="ss ss-parl3"></i> Brawl</a><br>
                            <a href="/Metagame/Historic-Brawl/" class="text-decoration-none"><i class="ss ss-parl3"></i> Historic Brawl</a>
                        </div>
                    </div>
                    <div class="card">
                        <div class="ae-border-bottom-light text-gold pl-2">
                            <b>TOOLS</b>
                        </div>
                        <div class="card-body p-2">
                            <a href="/Deck/Builder/" class="text-decoration-none"><i class="fas fa-tools"></i> Deckbuilder</a><br>
                            <a href="/Tourney/" class="text-decoration-none"><i class="fas fa-trophy"></i> Host Tournament</a><br>
                            <a href="/Collection/" class="text-decoration-none"><i class="fas fa-briefcase"></i> MTG Collection</a><br>
                            <a href="/Apps/MTGAAssistant/" class="text-decoration-none"><i class="ss ss-parl3"></i> MTGA Deck Tracker</a><br>
                            <a href="/Spoilers/" class="text-decoration-none"><i class="fas fa-eye"></i> Latest Spoilers</a>
                        </div>
                    </div>
                </div>
                <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Newest Articles</h4>

                <div class="firstfeed-flexbox">
                    @foreach (var article in this.Model.Articles)
                    {
                        <div class="article-card card border-0">
                            <a asp-controller="Article" asp-action="ById" asp-route-id="@article.Id" aria-label="article" class="image-wrapper">                           
                                <img src="@article.ImageUrl" class="article-uimgheader lazy" alt="@article.Title">
                            </a>
                            <div class="card-body pt-0">
                                <small class="yellow-line">
                                    <a href=""><i class="far fa-star"></i>@article.ArticleCreatorName</a>
                                    <span>@article.CreatedOn</span>
                                </small>
                                <div class="ff-display font-size-18">
                                    <b><a href="">@article.Title</a></b>
                                </div>
                                <div class="card-text d-none d-md-flex m-1">@article.ShortDescription</div>
                            </div>
                        </div>
                    }
                </div>
                <hr />
                <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Random Art</h4>
                <div class="firstfeed-flexbox">
                    @foreach (var art in this.Model.Arts)
                    {
                        <div class="article-card card border-0">
                            <a asp-controller="Art" asp-action="ById" asp-route-id="@art.Id" class="image-wrapper">
                                <img width="600" height="300" class="article-uimgheader lazy" src="@art.ImageUrl" alt="@art.Title" style="">
                               
                            </a>
                            
                            <div class="item-footer">
                            </div>
                        </div>
                        
                    }
                </div>
                <hr />
                <h4 class=" text-center mt-2 mb-4 ae-border-bottom-light text-header-gold">Random Cards</h4>
                <div class="firstfeed-flexbox">
                    @foreach (var card in this.Model.Cards)
                    {
                        <div class="inner-container">
                            <a asp-controller="Card" asp-action="ById" asp-route-id="@card.Id" class="item ae-card-link cardLink ">
                                <img width="200" height="300"  src="@card.CardRemoteUrl" alt="@card.Name" style="">
                                <div class="item-hidden-text">@card.Name</div>
                            </a>
                            <div class="item-footer">
                            </div>
                        </div>
                    }
                </div>
                <div class="mb-5"></div>

                <div class="row">
                    <div class="col-12 text-center">
                        <button class="btn btn-primary" id="statistics_btn">Show Statistics</button>
                    </div>
                </div>

                <div class="mt-4 p-5 bg-light d-none" id="statistics_box">
                    <div class="row">
                        <h2 class="col-md-6 text-center" id="total_houses"></h2>
                        <h2 class="col-md-6 text-center" id="total_rents"></h2>
                        <h2 class="col-md-6 text-center" id="total_names"></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 col-lg-12 col-xl-3 pl-0 pr-0">
        <div class="card mb-2 ">
            <div class="ae-border-bottom-light p-0 text-center ff-display">
                <b><i class="ss ss-bcore"></i>Game Expansions</b>
            </div>
            <div class="card-body p-2">
                <p class="card-text">
                    The MagicCardsmith database contains a full list of <a href="/Card/Set">all card sets</a> in MTG,ordered by  <a href="/Card/Set">expansions</a> a card <a href="/Card">creation tool for all approved artists</a>,
                    <a href="/Apps/LimitedRatings">limited ratings</a>, <a href="/Article/">article archive</a>, <a href="/MTGAGuides">MTG Arena Guides</a> and
                    detailed <a href="/Docs/">documentation</a> of the website.

                    @foreach (var gameExpansion in this.Model.GameExpansions)
                    {


                        <a>The @gameExpansion.Title @gameExpansion.Description .</a>



                    }
                </p>
            </div>
        </div>
        <div class="card mb-2 ">
            <div class="ae-border-bottom-light  p-0 text-center">
                <b><i class="fas fa-users"></i> Our Stores</b>
            </div>
            <div class="card-body p-2">

                @foreach (var store in this.Model.Stores)
                {
                    <p class="card-text">

                        <a href="/Card/Set">The @store.Name</a> is a @store.Country based store.It is located in the city of @store.City .

                    </p>
                }

            </div>
        </div>
        <div class="card mb-2 ">
            <div class="ae-border-bottom-light  p-0 text-center">
                <b><i class="fas fa-calendar"></i> Events</b>
            </div>
            @foreach (var gameEvent in this.Model.Events)
            {
                <div class="card-body p-2">
                    <p class="card-text">
                        @gameEvent.Title is part of our latest campaign for helping artists and content creators. By completing all of the milestones in  <a href="/ContentCreators/">@gameEvent.Title</a> you will help our developement and us as community.
                    </p>
                </div>
            }
        </div>
        <div id="zone18-300x600-card" class="mb-2 pt-1">
            <div>
                <div id="zone18-300x600" class="mx-auto"></div>
            </div>
        </div>
    </div>
</div>