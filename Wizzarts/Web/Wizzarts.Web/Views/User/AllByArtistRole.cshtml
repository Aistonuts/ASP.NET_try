@model Wizzarts.Web.ViewModels.WizzartsMember.ArtistListViewModel

@{
    this.ViewData["Title"] = "All Artists";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}

<div class="row mt-3">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
        <h2 class="ml-4 text-center ae-border-bottom-light text-header-gold"><i class="far fa-star"></i> All Artists</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-12 pl-0 pr-0">
        <div class="row">
            @if (this.Model.Artists.Any())
            {
            @foreach (var user in this.Model.Artists)
                {

                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 mb-2">

                        <div class="card h-100">
                            <div class="card-header p-0 text-center">
                                <a asp-action="ById" asp-route-id="@user.Id">
                                    <b>
                                        @user.Nickname
                                    </b>
                                </a>
                            </div>
                            <div class="card-body p-0">
                                <div class="w-100 d-flex justify-content-start text-center">
                                    <div>
                                        <div class="ae-profile-image-container mt-1" title="Image ©Brothers in Arms">
                                            <a asp-action="ById" asp-route-id="@user.Id">
                                                <img src="@user.AvatarUrl" alt="Copyright Brothers in Arms" class="ae-profile-image-card">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }else
            {
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
                    <h2 class="ml-4 text-center ae-border-bottom-light text-header-gold"><i class="far fa-star"></i> Currently there aren't any new artists.</h2>
                    <a class="pl-5 pt-1 pb-2 nav-link" asp-area="" asp-controller="Wizzarts" asp-action="Membership"><i class="fa fa-picture-o" aria-hidden="true"></i> <b>How to become an artist ?</b></a>
                </div>
            }
            
        </div>
        <div class="w-100 d-flex justify-content-center">
            <partial name="_PagingPartial" model="@Model" />
        </div>
    </div>
</div>
